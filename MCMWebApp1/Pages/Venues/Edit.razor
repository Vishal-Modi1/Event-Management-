<EditForm Model="@EditModel" OnValidSubmit="ValidSubmit">
    <DataAnnotationsValidator />
    <MudDialog>
        <DialogContent>
            <MudContainer>
                <MudGrid>
                    <MudItem lg="6" md="6" xs="12">
                        <MudTextField Margin="Margin.Dense" @bind-Value="EditModel.name" Label="Name" Variant="Variant.Outlined" For="@(() => EditModel.name)"></MudTextField>
                    </MudItem>
                    <MudItem lg="6" md="6" xs="12">
                        <MudTextField Margin="Margin.Dense" @bind-Value="EditModel.phone" Label="Phone" Variant="Variant.Outlined" For="@(() => EditModel.phone)"></MudTextField>
                    </MudItem>
                    <MudItem lg="6" md="6" xs="12">
                        <MudTextField Margin="Margin.Dense" @bind-Value="EditModel.url" Label="Url" Variant="Variant.Outlined" For="@(() => EditModel.url)"></MudTextField>
                    </MudItem>
                    <MudItem lg="6" md="6" xs="12">
                        <MudTextField Margin="Margin.Dense" T="string" Class="m-0" Label="Address" Variant="Variant.Outlined" @bind-Text="EditModel.address" Lines="5" />
                    </MudItem>
                    <MudItem lg="6" md="6" xs="12">
                        <MudItem lg="12" md="12" xs="12">
                            <MudText>
                                Photos(5):
                                <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small">
                                    <FontLabel Fontweight="500" FontColor="white">Add</FontLabel>
                                </MudButton>
                            </MudText>
                        </MudItem>
                        <MudItem lg="12" md="12" xs="12" Class="py-2">
                            <img src="https://mudblazor.com/images/sweden.jpg" height="100" width="100" alt="Mony the dog" class="rounded-lg" />
                            <img src="https://mudblazor.com/images/sweden.jpg" height="100" width="100" alt="Mony the dog" class="rounded-lg" />
                            <img src="https://mudblazor.com/images/sweden.jpg" height="100" width="100" alt="Mony the dog" class="rounded-lg" />
                            <img src="https://mudblazor.com/images/sweden.jpg" height="100" width="100" alt="Mony the dog" class="rounded-lg" />
                            <img src="https://mudblazor.com/images/sweden.jpg" height="100" width="100" alt="Mony the dog" class="rounded-lg" />
                        </MudItem>
                    </MudItem>
                    <MudItem Class="d-flex justify-end my-2" xs="12">
                        <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Disabled="isDisabled">
                            @if (isDisabled)
                            {
                                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                                <MudText Class="ms-2">Processing</MudText>
                            }
                            else
                            {
                                <MudText Class="ms-2">Update</MudText>

                            }
                        </MudButton>
                    </MudItem>
                </MudGrid>
            </MudContainer>
        </DialogContent>
    </MudDialog>
</EditForm>