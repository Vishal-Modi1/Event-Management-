<MudDialog>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="Submit">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    MudDialogInstance MudDialog
    {
        get;
        set;
    }
    [Parameter]
    public string ContentText
    {
        get;
        set;
    }
    [Parameter]
    public string ButtonText
    {
        get;
        set;
    }

    [Parameter]
    public string DeleteModelId { get; set; }

    [Parameter]
    public EventCallback<string> OnSubmit { get; set; }

    void Submit()
    {
        if (string.IsNullOrEmpty(DeleteModelId))
        {
            OnSubmit.InvokeAsync("");
        }
        else
        {
            OnSubmit.InvokeAsync(DeleteModelId);
        }

        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel() => MudDialog.Cancel();
}