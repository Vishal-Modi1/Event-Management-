@using DataModels
<MudForm Model="@eventModel">
    <MudDialog @bind-IsVisible="visible">
        <DialogContent>
            <MudContainer>
                <MudGrid>
                    <MudItem lg="6" md="6" xs="12">
                        <MudTextField @bind-Value="eventModel.name" Label="Name" Variant="Variant.Outlined" For="@(() => eventModel.name)"></MudTextField>
                    </MudItem>
                    <MudItem lg="6" md="6" xs="12">
                        <MudDatePicker Label="Date" @bind-value="eventModel.date" DateFormat="dd.MM.yyyy" Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem lg="6" md="6" xs="12">
                        <MudTimePicker Label="12 hours" AmPm="true" @bind-Time="eventModel.timeopen" Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem lg="6" md="6" xs="12">
                        <MudTimePicker Label="12 hours" AmPm="true" @bind-Time="eventModel.timecolse" Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem lg="6" md="6" xs="12">
                        <MudTextField @bind-Value="eventModel.state" Label="State" Variant="Variant.Outlined" For="@(() => eventModel.state)"></MudTextField>
                    </MudItem>
                    <MudItem lg="6" md="6" xs="12">
                        <MudTextField @bind-Value="eventModel.type" Label="Type" Variant="Variant.Outlined" For="@(() => eventModel.type)"></MudTextField>
                    </MudItem>
                    <MudItem lg="6" md="6" xs="12">
                        <MudTextField T="string" Class="m-0" Label="Description" Variant="Variant.Outlined" @bind-Text="eventModel.description" Lines="5" />
                    </MudItem>
                    <MudItem lg="6" md="6" xs="12">
                        <MudTextField @bind-Value="eventModel.genere" Label="Genere" Variant="Variant.Outlined" For="@(() => eventModel.genere)"></MudTextField>
                    </MudItem>
                    <MudItem lg="6" md="6" xs="12">
                        <MudText>
                            Photos(5):

                            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.TwoTone.Add" Size="Size.Small">
                                <FontLabel Fontweight="500" FontColor="white">Add</FontLabel>
                            </MudButton>
                        </MudText>
                    </MudItem>
                    <MudItem xs="12">
                        <MudImage Src="https://mudblazor.com/images/sweden.jpg" Height="100" Width="100" Alt="Mony the dog" Elevation="25" Class="rounded-lg" />
                        <MudImage Src="https://mudblazor.com/images/sweden.jpg" Height="100" Width="100" Alt="Mony the dog" Elevation="25" Class="rounded-lg" />
                        <MudImage Src="https://mudblazor.com/images/sweden.jpg" Height="100" Width="100" Alt="Mony the dog" Elevation="25" Class="rounded-lg" />
                        <MudImage Src="https://mudblazor.com/images/sweden.jpg" Height="100" Width="100" Alt="Mony the dog" Elevation="25" Class="rounded-lg" />
                        <MudImage Src="https://mudblazor.com/images/sweden.jpg" Height="100" Width="100" Alt="Mony the dog" Elevation="25" Class="rounded-lg" />
                    </MudItem>
                    <MudItem Class="d-flex justify-end my-2" xs="12">
                        <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit" Variant="Variant.Filled">Add</MudButton>
                    </MudItem>
                </MudGrid>
            </MudContainer>
        </DialogContent>
    </MudDialog>
</MudForm>
@code {

    private Event eventModel = new();
    private bool visible;
    private void Close() => visible = false;
}
